.label {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: start;
  width: 100%;
  padding-top: 18rpx;
  padding-left: 20rpx;
}

.label-item {
  position: relative;
  height: 51rpx;
  line-height: 51rpx;
  padding-left: 21rpx;
  padding-right: 21rpx;
  margin-right: 20rpx;
  margin-bottom: 18rpx;
  font-size: 25rpx;
  color: #2e2e2e;
  text-align: center;
  background-color: white;
  border-radius: 4px;
}

.label-item__hover {
  color: white;
  background-color: #2e2e2e;
}
