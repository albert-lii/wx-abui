<view class="ab-search-bar">
  <view class="ab-search-bar__box">
    <icon class="ab-search-bar__icon" type="search" size="{{iconSize}}" />
    <view class="ab-search-bar__divider" />
    <input class="ab-search-bar__input" type="text" placeholder="{{placeholder}}" value="{{value}}" bindinput="_searchInput" bindconfirm="_searchConfirm" />
    <view class="ab-search-bar__icon-clear" wx:if="{{value.length > 0}}" bindtap="_searchClear">
      <icon type="clear" size="{{iconSize}}" />
    </view>
  </view>
  <view class="ab-search-bar__search-btn" bindtap="_searchConfirm">
    <text wx:if="{{value.length > 0}}" data-key="search">搜索</text>
    <text wx:else data-key="back">返回</text>
  </view>
</view>